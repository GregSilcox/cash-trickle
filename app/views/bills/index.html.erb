<p id="notice"><%= notice %></p>

<h1>Bills</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Payee</th>
      <th>Amount</th>
      <th>Due on</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill.id %></td>
        <td><%= bill.payee %></td>
        <td><%= bill.amount %></td>
        <td><%= bill.due_on %></td>
        <td><%= bill.note %></td>
        <td><%= link_to 'Show', bill %></td>
        <td><%= link_to 'Edit', edit_bill_path( bill ) %></td>
        <td><%= link_to 'Destroy', bill, 
          method: :delete, 
          data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

