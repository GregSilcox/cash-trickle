%h1 Listing repeaters

%table.table
  %thead
    %tr
      %th Payee
      %th Amount
      %th Due On
      %th Frequency
      %th Period
      %th
      %th
      %th

  %tbody
    - @repeaters.each do |repeater|
      %tr
        %td= repeater.bill.payee
        %td= repeater.bill.amount
        %td= repeater.bill.due_on
        %td= repeater.frequency
        %td= repeater.period
        %td= link_to 'Show', repeater
        %td= link_to 'Edit', edit_repeater_path(repeater)
        %td= link_to 'Destroy', repeater, 
          :method => :delete, 
          :data => { :confirm => 'Are you sure?' }

