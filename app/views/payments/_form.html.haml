= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :repeater_id
    = f.text_field :repeater_id
  .field
    = f.label :due_on
    = f.date_select :due_on
  .field
    = f.label :pay_on
    = f.date_select :pay_on
  .field
    = f.label :paid_on
    = f.date_select :paid_on
  .actions
    = f.submit 'Save'
