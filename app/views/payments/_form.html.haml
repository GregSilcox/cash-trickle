= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :who
    = f.text_field :who
  .field
    = f.label :when
    = f.date_select :when
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :repeater
    = f.text_field :repeater
  .actions
    = f.submit 'Save'
